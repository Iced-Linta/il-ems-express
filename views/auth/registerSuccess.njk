{% extends "templates/layout.njk" %}

{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ govukPanel({
        titleText: "Registration complete",
        html: ["Your username:<br><strong>", user, "</strong>"] | join
      }) }}

      <p class="govuk-body">You have created an account on the Employee Management System.</p>

      {{ govukWarningText({
        text: "You will not be able to reset your password if you forget it. Make sure you remember your password, but do not write it down.",
        iconFallbackText: "Warning"
      }) }}

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        You will now be able to <a href="/login">sign in</a> to Iced Linta Employee Management to view administration tasks.
      </p>
      <p class="govuk-body">
        If you require elevated permissions, please ask your People Manager to assign these manually.
      </p>

      <p class="govuk-body">
        <a href="https://kainos.com/contact-us" class="govuk-link">What did you think of this service?</a> (takes 30 seconds)
      </p>
    </div>
  </div>

{% endblock %}