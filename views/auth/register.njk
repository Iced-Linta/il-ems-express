{% extends "templates/layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/password-input/macro.njk" import govukPasswordInput %}

{% block beforeContent %}
    {{ super() }}

    {{ govukBackLink({
        text: "Back",
        href: "/login"
      }) }}
{% endblock %}

{% block content %}

  <h1 class="govuk-heading-xl">Create an account</h1>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

  <p class="govuk-body">Use this page to create an account to access the Employee Management System.</p>
  <p class="govuk-body">You must create a username to access this service in the future. This username must be:</p>

  <ul class="govuk-list govuk-list--bullet">
  <li>memorable</li>
  <li>unique</li>
  </ul>

  <form action="/register" class="form" method="post">

  
  {{ govukInput({
    id: "username",
    name: "username",
    classes: "govuk-input--width-20",
    errorMessage: {
        text: "Enter a valid user ID and password."
    } if errormessage else false,
    label: {
        text: "Create a username"
    }
  }) }}

  {{ govukPasswordInput({
    label: {
      text: "Create a password"
    },
    id: "password",
    name: "password",
    classes: "govuk-input--width-20"
  }) }}

    {{ govukButton({
        text: "Continue",
        preventDoubleClick: true
      }) }}

</form>

</div></div>


{% endblock %}