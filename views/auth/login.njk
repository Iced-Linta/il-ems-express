{% extends "templates/layout.njk" %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/password-input/macro.njk" import govukPasswordInput %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% block content %}

<main class="govuk-main-wrapper">
    <div class="govuk-grid-row">

<div class="govuk-grid-column-two-thirds">
    
    {% set html %}
    <p class="govuk-body">Do not share your username and password with anyone else.</p>
{% endset %}

{{ govukNotificationBanner({
    titleText: "Keeping your information secure",
  html: html
}) }}

  <h1 class="govuk-heading-xl">Sign in to Iced Linta Employee Management</h1>

  <form action="/login" class="form" method="post">

  
  {{ govukInput({
    id: "username",
    name: "username",
    classes: "govuk-input--width-20",
    errorMessage: {
        text: "Enter a valid user ID and password."
    } if errormessage else false,
    label: {
        text: "Username"
    }
  }) }}

  {{ govukPasswordInput({
    label: {
      text: "Password"
    },
    id: "password",
    name: "password",
    classes: "govuk-input--width-20"
  }) }}

    {{ govukButton({
        text: "Sign in",
        preventDoubleClick: true
      }) }}

</form>

<h2 class="govuk-heading-m">New users of Iced Linta Employee Management</h2>
<p class="govuk-body">
    <a class="govuk-link" href="/register">Create an account</a>
</p>

  </div>
</div>
</main>

{% endblock %}